<?xml version="1.0" encoding="utf-8"?>
<Themes.CommentAddViewCustom
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/comment_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/comment_send"
        android:layout_toStartOf="@+id/comment_send"
        android:hint="@string/type_your_comment"
        android:inputType="text"
        />

    <Button
        android:id="@+id/comment_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/comment_add_separator"
        android:layout_alignBottom="@+id/comment_add"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/comment_add"
        android:layout_below="@+id/comment_separator"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:background="@color/green_default"
        android:text="@string/send"
        />

</Themes.CommentAddViewCustom>